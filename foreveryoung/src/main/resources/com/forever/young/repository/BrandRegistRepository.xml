	<update id="update" parameterType="com.forever.young.entity.Product">
		update product_table 
			set product_name = #{name}, 
				product_price = #{price},
				product_stock = #{stock}
			where product_no = #{number} 
	</update>
	
	
	<delete id="deleteProduct">
		delete 
			 product_table 
		where product_no = #{product_no}
	</delete>

